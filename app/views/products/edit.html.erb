<h1>Edit Product</h1>

<p>
 <%= link_to "Back to Products", "products/index" %>
</p>

<%= form_for @product do |f| %>


	<p>
		<%= f.label "name" %> <br>
		<%= f.text_field "name" %>
	</p>
  <p>
    <%= f.label "description" %><br>
    <%= f.text_field "description" %>
  </p>
  <p>
    <%= f.label "price_in_cents" %><br>
    <%= f.text_field "price_in_cents" %>
  </p>
  <p>
    <%= submit_tag "Save" %>
  </p>
<% end %>
