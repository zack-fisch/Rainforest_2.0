<%= form_for @product do |f| %>
	<p>
		<%= f.label "name" %> <br>
		<%= f.text_field "name" %>
	</p>
	<p>
		<%= f.label "description" %> <br>
		<%= f.text_field "description"%> <br>
	</p>
	<p>
		<%= f.label "price_in_cents" %> <br>
		<%= f.text_field "price_in_cents" %>
	</p>
	<p>
		<%= f.submit "Save" %>
	</p>
<% end %>